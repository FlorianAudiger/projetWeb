<%- include('header') -%>

<body>
  <br></br>
  <div class="container">
    <div class="row">
      <div class="col">
      </div>
      <div class="col-7">
        <div class="card text-center">
          <div class="card-header">

            <h4 class="card-title"> Connexion </h4>
          </div>
          <div class="card-body">
            <h5 class="card-title">Connectez-vous avec votre adresse email</h5>
            <form action="/login" method="post" class="needs-validation" novalidate>
              <div class="form-group">
                <%- include('alert') -%>
                <input type="text" class="form-control" id="uname" placeholder="Adresse email" name="mail" required>
              </div>
              <div class="form-group">
                <label for="pwd"></label>
                <input type="password" class="form-control" id="pwd" placeholder="Mot de passe" name="pswd" required>
              </div>

              <div class="row">
                <div class="col-lg-8"></div>&nbsp;
              </div> <!-- Saut vide -->
              <button type="submit" class="btn btn-info">Se connecter</button>
            </form>

            <script src="/js/requiredInput.js"></script>

            <br></br>
            <div class="card-text"> Pas encore membre ? <a href="/register">Inscrivez-vous gratuitement</a> en 30s.
            </div>

          </div>
        </div>

      </div>
      <div class="col">
      </div>
    </div>
  </div>



  <%- include('footer') -%>
</body>



</html>