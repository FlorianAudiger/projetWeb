<%- include('header') -%>

<body>
  
<div class="jumbotron text-center">

  <h1> Liste de tous les exercices </h1>
</div>
<div class="container">
  <%- include('../alert') -%>
  <form action="/exercise" method="post">
    <br></br>
    <div class="input-group mb-3">
      <select type="text" name="muscle" class="custom-select" required>
        <option>Tous les muscles</option>
        <% for (muscle of resDB2) { %>
        <option> <%- muscle.Nom -%> </option>
        <% } %>
      </select>
      <select type="text" name="materiel" class="custom-select" required>
        <option>Tous les matériels</option>
        <% for (materiel of resDB3) { %>
        <option> <%- materiel.Nom -%> </option>
        <% } %>
      </select>
      <div class="input-group-append">
        <button class="btn btn-info" type="submit" id="button-addon2"> Filtrer </button>
      </div>
    </div>
</form>




<div class="row row-cols-1 row-cols-3">
  <% for (exer of resDB) { %>
    <div class="col mb-2">
  <div class="card text-center">
<!-- FAIRE UNE FONCTION -->
    <% if(exer.IDMateriel==1){ %> <img src="img/exercises/aucun.png"  class="card-img-top" alt="..."><% } %>
    <% if(exer.IDMateriel==3){ %> <img src="img/exercises/haltere.png"  class="card-img-top" alt="..."><% } %>
    <% if(exer.IDMateriel==6){ %> <img src="img/exercises/machine.png"  class="card-img-top" alt="..."><% } %>
    <% if(exer.IDMateriel==8){ %> <img src="img/exercises/barre.jpg"  class="card-img-top" alt="..."><% } %>
    <div class="card-body">
      <h5 class="card-title"><%= exer.Nom %></h5>
   
      <div class="row">
        <div class="col">
      <a href="/exercise/<%=exer.IDExercice %>" class="btn btn-primary btn-block">Stats</a></div>
      <div class="col">
        <a href="<%=exer.Description%>" class="btn btn-secondary btn-block">Vidéo</a></div>
    </div>
    </div>
  </div>
</div>
  <% } %>
</div>

</div>
<%- include('../footer') -%>
</body>
</html>